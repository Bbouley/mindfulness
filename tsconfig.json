{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "outDir": "./dist",
    "lib": [
      "es6",
      "dom"
    ],
    "sourceMap": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*.ts",
    "test/*.ts"
  ],
  "exclude": [
    "node_modules",
  ],
}
